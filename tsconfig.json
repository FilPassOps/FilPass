{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "es2021", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "lib/*": ["lib/*"],
      "domain/*": ["domain/*"],
      "components/*": ["components/*"],
      "wordings-and-errors/*": ["wordings-and-errors/*"]
    },
    "incremental": true
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next.config.mjs"],
  "exclude": ["node_modules", "dist", ".next", "out", "next.config.mjs"]
}
